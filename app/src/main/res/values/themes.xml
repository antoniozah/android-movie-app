<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->

        <!--┌───────────────────────────────────────────────────────────────────────────────────┐-->
        <!--  → MAIN COLORS -->
        <!--└───────────────────────────────────────────────────────────────────────────────────┘-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Surface colors. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Background colors. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Other colors. -->
        <item name="colorAccent">?colorSecondary</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <item name="android:autofilledHighlight">@android:color/transparent</item>

        <!-- Control colors. -->
        <item name="android:colorControlNormal">?colorOnSurface</item>
        <item name="android:colorControlActivated">?colorSecondary</item>
        <item name="android:colorControlHighlight">?colorOnSurface</item>

        <!-- Alpha emphasis values. -->
        <item name="alphaEmphasisHigh">0.95</item>
        <item name="alphaEmphasisMediumUp">0.7</item>
        <item name="alphaEmphasisMedium">0.5</item>
        <item name="alphaEmphasisMediumDown">0.3</item>
        <item name="alphaEmphasisDisabled">0.15</item>

        <!--┌───────────────────────────────────────────────────────────────────────────────────┐-->
        <!--  → STATUS & NAVIGATION BAR -->
        <!--└───────────────────────────────────────────────────────────────────────────────────┘-->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!--┌───────────────────────────────────────────────────────────────────────────────────┐-->
        <!--  → SHAPES -->
        <!--└───────────────────────────────────────────────────────────────────────────────────┘-->

        <item name="shapeAppearanceSmallComponent">@style/Theme.MovieApp.Shape.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/Theme.MovieApp.Shape.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/Theme.MovieApp.Shape.LargeComponent</item>

        <!--┌───────────────────────────────────────────────────────────────────────────────────┐-->
        <!--  → TEXT STYLES -->
        <!--└───────────────────────────────────────────────────────────────────────────────────┘-->

        <item name="textAppearanceHeadline1">@style/Theme.MovieApp.Text.H1</item>
        <item name="textAppearanceHeadline2">@style/Theme.MovieApp.Text.H2</item>
        <item name="textAppearanceHeadline3">@style/Theme.MovieApp.Text.H3</item>
        <item name="textAppearanceHeadline4">@style/Theme.MovieApp.Text.H4</item>
        <item name="textAppearanceHeadline5">@style/Theme.MovieApp.Text.H5</item>
        <item name="textAppearanceHeadline6">@style/Theme.MovieApp.Text.H6</item>
        <item name="textAppearanceSubtitle1">@style/Theme.MovieApp.Text.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Theme.MovieApp.Text.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Theme.MovieApp.Text.P1</item>
        <item name="textAppearanceBody2">@style/Theme.MovieApp.Text.P2</item>
        <item name="textAppearanceButton">@style/Theme.MovieApp.Text.P1</item>
        <item name="textAppearanceCaption">@style/Theme.MovieApp.Text.Caption</item>

        <!--┌───────────────────────────────────────────────────────────────────────────────────┐-->
        <!--  → UI ELEMENTS -->
        <!--└───────────────────────────────────────────────────────────────────────────────────┘-->

        <item name="navigationViewStyle">@style/Theme.MovieApp.BottomSheet</item>
        <item name="toolbarStyle">@style/Theme.MovieApp.Toolbar</item>
        <item name="checkboxStyle">@style/Theme.MovieApp.Checkbox</item>

        <item name="cardElevation">4dp</item>

    </style>
</resources>